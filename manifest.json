{
    "manifest_version": 3,
    "name": "My extension",
    "icons": {
        "32": "recipe.png"
    },
    "version": "1.0.0",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "bookmarks",
        "storage",
        "identity"
    ],
    "host_permissions": ["http://*/*", "https://*/*"],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ]
}
